<configuration>
    <conversionRule conversionWord="photon" class="dev.photoncore.server.utils.PhotonHighlightingConverter"/>
    
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%gray(%d{HH:mm:ss})] [%photon(%level)] [%cyan(%logger{36})] %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
